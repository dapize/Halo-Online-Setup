{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@assets":["assets"],
      "@assets/*":["assets/*"],
      "@helpers":["helpers"],
      "@helpers/*":["helpers/*"],
      "@utils":["utils"],
      "@utils/*":["utils/*"],
      "@contexts":["contexts"],
      "@contexts/*":["contexts/*"],
    }
  },
  "include": [
    "src"
  ]
}
